<!DOCTYPE html>
<html lang="en">
  <head>
    <title>company profile</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </head>
  <body>
    <!--Navbar-->
    <nav class="navbar navbar-expand-md navbar-light bg-light static-top">
      <div class="container-fluid">
        <a class="navbar-brand" href="/companies">
          <h3>
            <img src="/uploads/<%= user.compPic %> " width="40" height="40" class="d-inline-block align-top" alt="" loading="lazy" />
            <%= user.name %>
          </h3>
        </a>
        <form action="/logout" id="logout" method="POST">
          <button class="btn btn-outline-success mx-2" type="submit" onclick="document.getElementById('logout')">Logout</button>
        </form>
      </div>
    </nav>

    <!--Basic-->
    <div class="container d-flex my-4">
      <div class="row">
        <div class="col sm-10">
          <div class="card">
            <img class="card-img-top"src="/uploads/<%= user.compPic %> " style="width: 1109.28px; height: 215.56px; top: -17.5596px; left: 0px" alt="cover photo" />
            <div class="card-body">
              <h4 class="card-title"><%= user.name %></h4>
              <a class="btn btn-primary btn-sm my-2 auto" href="#">Jobs</a>
              <button type="button" class="btn btn-primary btn-sm data-toggle my-2" aria-pressed="false" autocomplete="off">Follow</button>
              <p class="text-muted align-right">Subscribers</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!--about the company-->
    <div class="container">
      <dl class="basic-info">
        <div class="row">
          <div class="col-sm-2">
            <dt>Website</dt>
          </div>
          <div class="col-sm-5">
            <dd>
              <a class="external-link about-us__link" href="<%= user.website %>" data-tracking-control-name="about_website" target="_blank"> http://www.<%= user.website %> </a>
            </dd>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-2">
            <dt>Headquarters</dt>
          </div>
          <div class="col-sm-5">
            <dd>New York, New York</dd>
          </div>
        </div>
      </dl>
    </div>

    <!--recent post -->
    <div class="container">
      <h1>Recent Posts</h1>
      <div class="row">
        <% for (var i = 0; i < user.posts.length; i++) { %>
        <div class="col-sm-4 d-flex justify-content-between">
          <div class="card" style="width: 400px">
            <div class="card-body d-flex flex-column">
              <img class="card-img-top" src="/uploads/<%= user.posts[i].pic %> " alt="Card image" style="width: 100%" />
              <h4 class="card-title align-self-center"><%= user.posts[i].jobOffer %></h4>
              <p class="card-subtitle mb-2 text-muted justify-content-end">posted on <%= user.posts[i].createdAt.toDateString() %></p>
              <p class="card-text"><%= user.posts[i].tags %></p>
              <p>Applied <span class="badge badge-primary badge-pill"><%= user.posts[i].applied %></span></p>
              <a href="#" class="align-self-center">Go To Post</a>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
    <!--metrics-->
    <div class="container mt-4">
      <h1>metrics</h1>
    </div>
  </body>
  <script src="/public/javascript/companyProfile.js">

  </script>
</html>
